<div class="col-md-offset-2 col-lg-8">
  <div class="box box-success">
    <div class="box-header with-border">
      <h3 class="box-title">Add new school</h3>
    </div>
    <%= simple_form_for @school do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="box-body">
        <div class="form-group">
          <%= f.input :name, placeholder: "name", input_html: { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :phone, placeholder: "name", input_html: { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :address, as: :text,  placeholder: "name", input_html: { class: "form-control" } %>
        </div>
      </div>
      <div class="box-footer">
        <%= link_to "Back", schools_path, class: "btn btn-default" %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
