<section class="content">
  <div class="box">
    <div class="box-header center-attr">
      <h3 class="box-title"><%= "chi tiet diem mon hoc #{@student_subject.name_subject} cua hoc sinh: #{@student_subject.student_classroom.student_name}"%></h3>
    </div>
    <hr>
    <div class="box-body">
      <table class="table table-bordered table-striped datatable">
        <thead>
          <tr>
            <th>loai diem</th>
            <th>Diem</th>
            <th>ngay cham</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @student_subject.points.each do |point| %>
            <tr>
              <td><%= point.point_type_name %></td>
              <td><%= point.point %></td>
              <td><%= convert_date point.created_at %></td>
              <td>
                <%= link_to edit_point_path(id: point.id), method: :GET, class: "btn btn-warning" do %>
                  <i class="fa fa-trash-o"></i> Edit
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
