<%= simple_form_for @point_type do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">
    <div class="form-group">
      <%= f.input :name, placeholder: "name", input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= f.input :value, placeholder: "value", input_html: { class: "form-control", type: "number", min: 0, max: 10 } %>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to "Back", point_types_path, class: "btn btn-default" %>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
