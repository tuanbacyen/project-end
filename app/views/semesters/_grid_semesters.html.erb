<div class="box-body">
  <table id="example1" class="table table-bordered table-striped datatable">
    <thead>
      <tr>
        <th class="col-md-3">Period</th>
        <th class="col-md-2">Start date</th>
        <th class="col-md-2">End date</th>
        <th class="col-md-2">School year</th>
        <th class="col-md-3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @semesters.each do |semester| %>
        <tr>
          <td><%= key_to_text semester.period %></td>
          <td><%= semester.start_date.strftime t("date") %></td>
          <td><%= semester.end_date.strftime t("date") %></td>
          <td><%= semester.school_year %></td>
          <td>
            <%= render "action", semester: semester %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th>Period</th>
        <th>Start date</th>
        <th>End date</th>
        <th>School year</th>
        <th>Action</th>
      </tr>
    </tfoot>
  </table>
</div>
