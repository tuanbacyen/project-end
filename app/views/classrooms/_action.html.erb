<%= link_to students_classs_path(classroom_id: classroom), method: :GET, class: "btn btn-info" do %>
  <i class="fa fa-info-circle"></i> List student
<% end %>

<%= link_to classroom_class_subjects_path(classroom), method: :GET, class: "btn btn-success" do %>
  <i class="fa fa-briefcase"></i> Subject
<% end %>

<%= link_to edit_classroom_path(classroom), method: :GET, class: "btn btn-warning" do %>
  <i class="fa fa-trash-o"></i> Edit
<% end %>

<%= link_to classroom_path(classroom), method: :DELETE, data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
  <i class="fa fa-trash-o"></i> Destroy
<% end %>
