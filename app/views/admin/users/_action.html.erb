<% if user.confirmed %>
  <% unless user.role_equal_than_you? current_user %>
    <%= link_to edit_admin_user_path(user), method: :GET, class: "btn btn-warning" do %>
      <i class="fa fa-edit"></i> Edit
    <% end %>
  <% end %>

  <% unless user.it_me_or_role_equal_than_you? current_user %>
    <%= link_to admin_user_path(user), method: :DELETE, data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
      <i class="fa fa-trash-o"></i> Destroy
    <% end %>
  <% end %>

  <%= link_to admin_user_path(user), method: :GET, data: {toggle: "modal", target: "#modal-admin"}, class: "btn btn-primary", remote: true do %>
    <i class="fa fa-eye"></i> View
  <% end %>

  <% if current_user.admin? %>
    <%= link_to admin_user_school_user_index_path(user), method: :GET, class: "btn btn-info" do %>
      <i class="fa fa-eye"></i> Schools
    <% end %>
  <% end %>
<% else %>
  <%= link_to admin_new_confirm_path(id: user), method: :GET, class: "btn bg-green" do %>
    <i class="fa fa-check"></i> confirmed
  <% end %>

  <% unless user.it_me_or_role_equal_than_you? current_user %>
    <%= link_to admin_user_path(user), method: :DELETE, data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
      <i class="fa fa-trash-o"></i> Cancle
    <% end %>
  <% end %>

  <%= link_to admin_user_path(user), method: :GET, data: {toggle: "modal", target: "#modal-admin"}, class: "btn btn-primary", remote: true do %>
    <i class="fa fa-eye"></i> Detail
  <% end %>
<% end %>
