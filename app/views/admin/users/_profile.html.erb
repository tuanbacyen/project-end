<div class="tab-content no-border padding-24">
  <div id="home" class="tab-pane in active">
    <div class="row">
      <div class="col-xs-12 col-sm-3 center">
        <span class="profile-picture">
          <%= image_tag user.avatar.thumb.url, class: "img-responsive" %>
        </span>
        <div class="space space-4"></div>
        <a href="#" class="btn btn-sm btn-block btn-primary">
          <i class="ace-icon fa fa-envelope-o bigger-110"></i>
          <span class="bigger-110">Send a message</span>
        </a>
        <% if user.confirmed %>
          <%= link_to edit_admin_user_path(user), method: :GET, class: "btn btn-sm btn-block btn-warning" do %>
            <i class="ace-icon fa fa-edit bigger-110"></i> Edit
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-9">
        <h4 class="user-title">
          <span class="middle">
            <%= "#{user.name} -" %>
          </span>
          <span>
            <%= role_label user.role %>
          </span>
          <span>
            <%= working_label user.working %>
          </span>
          <span>
            <%= confirm_label user.confirmed %>
          </span>
        </h4>
        <div class="profile-user-info">
          <div class="profile-info-row">
            <div class="profile-info-name"> Email </div>
            <div class="profile-info-value">
              <span>
                <%= mail_to @user.email, "#{@user.email}" %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Phone </div>
            <div class="profile-info-value">
              <span>
                <%= @user.phone %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Identity card </div>
            <div class="profile-info-value">
              <span>
                <%= @user.identity_card %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Gender </div>
            <div class="profile-info-value">
              <span>
                <%= gender_user @user.gender %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Address </div>
            <div class="profile-info-value">
              <i class="fa fa-map-marker light-orange bigger-110"></i>
              <span>
                <%= @user.address %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Age </div>
            <div class="profile-info-value">
              <span>
                <%= "#{@user.age} (#{convert_date @user.birth})" %>
              </span>
            </div>
          </div>
          <div class="profile-info-row">
            <div class="profile-info-name"> Created </div>
            <div class="profile-info-value">
              <span>
                <%= convert_date @user.created_at %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
