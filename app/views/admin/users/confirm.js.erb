<% if @user.errors.any? %>
  show_notify('user-errors', 3, '<%= @user.errors.full_messages.to_sentence %>', '/');
<% else %>
  var table = $('.datatable').DataTable();
  table.row($('<%= "#confirm-#{@user.id}" %>')).remove().draw();
  show_notify('<%= "user-success-#{@user.id}" %>', 1, 'Thanh Cong', '<%= admin_user_path(@user) %>');
<% end %>
